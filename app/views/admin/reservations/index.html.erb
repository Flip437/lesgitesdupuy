<p id="notice"><%= notice %></p>

<h1>Admin Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_reservations.order(:start_date).each do |admin_reservation| %>
      <tr id=reservation_<%=admin_reservation.id%>>
        <td><%= admin_reservation.start_date %></td>
        <td><%= admin_reservation.end_date %></td>
        <td><%= admin_reservation.firstname %></td>
        <td><%= admin_reservation.lastname %></td>
        <td><%= admin_reservation.email %></td>
        <td><%= link_to 'Show', admin_reservation %></td>
        <td><%= link_to 'Edit', edit_admin_reservation_path(admin_reservation) %></td>
        <td><%= link_to 'Destroy', admin_reservation, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

